<sdf version="1.5">
  <model name="huppel">
    <pose>0 0 0 0 0 1.57</pose>
    <static>true</static>
    <link name="body">
      <!-- Scaling the collision element -->
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://huppel/media/huppel.dae</uri>
            <scale>1.3 1.3 1</scale>  <!-- Scale factor for collision geometry -->
          </mesh>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>           <!-- Lateral friction coefficient -->
              <mu2>1.0</mu2>         <!-- Secondary lateral friction coefficient -->
            </ode>
          </friction>
          <contact>
            <ode>
              <soft_cfm>0.0</soft_cfm>   <!-- Constraint force mixing (0 is rigid) -->
              <soft_erp>0.2</soft_erp>   <!-- Error reduction parameter -->
              <kp>1e5</kp>               <!-- Spring constant -->
              <kd>1e3</kd>               <!-- Damping constant -->
            </ode>
          </contact>
        </surface>  
      </collision>
      
      <!-- Scaling the visual element -->
      <visual name="visual">
        <cast_shadows>false</cast_shadows>
        <geometry>
          <mesh>
            <uri>model://huppel/media/huppel.dae</uri>
            <scale>1.3 1.3 1</scale>  <!-- Scale factor for visual geometry -->
          </mesh>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
    </link>
  </model>
</sdf>
